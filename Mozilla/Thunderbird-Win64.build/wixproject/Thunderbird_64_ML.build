		</exec> -->
<!-- 		<move file="core\distribution\extensions\{e2fda1a4-762b-4020-b5ad-a41df1933103}.xpi" tofile=".\lightning-enu.zip" overwrite = "true"/>
		<exec program="C:\Program Files\7-Zip\7z.exe" failonerror="false">
