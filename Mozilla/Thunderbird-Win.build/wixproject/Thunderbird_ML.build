                    <namespace prefix="x" uri="http://www.w3.org/1999/02/22-rdf-syntax-ns#" />
					<namespace prefix="em" uri="http://www.mozilla.org/2004/em-rdf#" />
	            </namespaces>
		</xmlpoke>
		<exec program="${FULL_7Z_PATH}">
			<arg value="u" />
			<arg file="..\sourcepkt\${SourceFILE}" />
			<arg value="install.rdf" />
