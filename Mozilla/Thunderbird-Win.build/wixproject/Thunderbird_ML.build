	<echo message="Tools Dir: ${TOOLS_DIR}" />
	<!-- 7zip path -->
	<readregistry property="FULL_7Z_PATH" key="SOFTWARE\AutoPkg\7ZIP_PATH" hive="CurrentUser" />
	<echo message="7zip path: ${FULL_7Z_PATH}" />

