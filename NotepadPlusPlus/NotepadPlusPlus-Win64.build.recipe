            <key>Processor</key>
            <string>com.github.sebtomasi.SharedProcessors/RenameVar</string>
            <key>Arguments</key>
            <dict>
                <key>input_var</key>
                <string>https://github.com/notepad-plus-plus/nppPluginList/archive/refs/tags/v%version%.zip</string>
