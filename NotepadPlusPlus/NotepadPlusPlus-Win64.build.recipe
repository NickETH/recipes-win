                <string>pluginlist_url</string>
            </dict>
		</dict> -->
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%pluginlist_url%</string>
                <key>filename</key>
                <string>nppPluginList.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>com.github.autopkg-win.SharedProcessors/SevenZipExtractor</string>
            <key>Arguments</key>
            <dict>
                <key>exe_path</key>
                <string>%pathname%</string>
                <key>extract_dir</key>
                <string>%BUILD_DIR%\%pkg_dir%\sourceunzipped\</string>
                <key>preserve_paths</key>
                <string>False</string>
                <key>recursive</key>
                <string>True</string>
                <key>extract_file</key>
                <string>*\pl.x64.json</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
			<string>com.github.autopkg-win.SharedProcessors/TextFileSearcher</string>
            <key>Arguments</key>
            <dict>
                <key>file_to_open</key>
                <string>%BUILD_DIR%\%pkg_dir%\sourceunzipped\pl.x64.json</string>
                <key>re_pattern</key>
				<!-- <string>https://github.com/pnedev/compare-plugin/releases/download/v2.0.0/ComparePlugin_v2.0.0_X64.zip</string> -->
                <string>https://github.com/.*/compare-plugin/releases/download/v[0-9.]+/ComparePlugin_v[0-9.]+_X64.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%match%</string>
                <key>filename</key>
                <string>compareplugin.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>com.github.autopkg-win.SharedProcessors/SevenZipExtractor</string>
            <key>Comment</key>
            <string>Extract the Notepad++ installer</string>
            <key>Arguments</key>
            <dict>
                <key>exe_path</key>
                <string>%pathname%</string>
                <key>extract_dir</key>
                <string>%BUILD_DIR%\%pkg_dir%\wixproject\%NAME%\plugins\ComparePlugin</string>
                <key>preserve_paths</key>
                <string>False</string>
                <key>extract_file</key>
                <string>*</string>
                <key>ignore_pattern</key>
                <string></string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
			<string>com.github.autopkg-win.SharedProcessors/TextFileSearcher</string>
            <key>Arguments</key>
            <dict>
                <key>file_to_open</key>
                <string>%BUILD_DIR%\%pkg_dir%\sourceunzipped\pl.x64.json</string>
                <key>re_pattern</key>
				<!-- <string>https://sourceforge.net/projects/jsminnpp/files/Uni/JSToolNPP.1.1903.0.uni.64.zip</string> -->
                <string>https://sourceforge.net/.*/JSToolNPP[0-9.]+uni.64.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%match%</string>
                <key>filename</key>
                <string>jstoolplugin.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>com.github.autopkg-win.SharedProcessors/SevenZipExtractor</string>
            <key>Comment</key>
            <string>Extract the Notepad++ installer</string>
            <key>Arguments</key>
            <dict>
                <key>exe_path</key>
                <string>%pathname%</string>
                <key>extract_dir</key>
                <string>%BUILD_DIR%\%pkg_dir%\wixproject\%NAME%\plugins\JSMinNPP</string>
                <key>preserve_paths</key>
                <string>False</string>
                <key>extract_file</key>
                <string>*</string>
                <key>ignore_pattern</key>
                <string></string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>GitHubReleasesInfoProvider</string>
            <key>Arguments</key>
            <dict>
                <key>github_repo</key>
                <string>chcg/NPP_HexEdit</string>
				<key>include_prereleases</key>
				<string>true</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>com.github.sebtomasi.SharedProcessors/RenameVar</string>
            <key>Arguments</key>
            <dict>
                <key>input_var</key>
                <string>https://github.com/chcg/NPP_HexEdit/releases/download/%version%/HexEditor_%version%_x64.zip</string>
                <key>rename_var</key>
                <string>hexplugin_url</string>
            </dict>
		</dict>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%hexplugin_url%</string>
                <key>filename</key>
                <string>hexeditplugin.zip</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>com.github.autopkg-win.SharedProcessors/SevenZipExtractor</string>
            <key>Comment</key>
            <string>Extract the Notepad++ installer</string>
            <key>Arguments</key>
            <dict>
                <key>exe_path</key>
                <string>%pathname%</string>
                <key>extract_dir</key>
                <string>%BUILD_DIR%\%pkg_dir%\wixproject\%NAME%\plugins\HexEditor</string>
                <key>preserve_paths</key>
                <string>False</string>
                <key>extract_file</key>
                <string>*</string>
                <key>ignore_pattern</key>
                <string></string>
            </dict>
        </dict>
